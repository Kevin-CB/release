apiVersion: "v1"
kind: "Pod"
metadata:
  labels:
    jenkins: "slave"
    job: "package"
spec:
  containers:
  - command:
    - "cat"
    env:
    - name: "HOME"
      value: "/home/jenkins/agent/workspace"
    image: "microsoft/azure-cli:2.0.59"
    imagePullPolicy: "IfNotPresent"
    name: "azure-cli"
    resources:
      limits:
        memory: "512Mi"
        cpu: "400m"
      requests:
        memory: "512Mi"
        cpu: "400m"
    securityContext:
      privileged: false
      runAsUser: 1000
      runAsGroup: 1000
    tty: true
    volumeMounts:
      - name: binary-core-packages
        mountPath: /packages/binary
      - name: website-core-packages
        mountPath: /packages/web
  - command:
    - "cat"
    env:
    - name: "HOME"
      value: "/home/jenkins/agent/workspace"
    image: "jenkinsciinfra/packaging:latest"
    imagePullPolicy: "Always"
    name: "packaging"
    resources:
      limits:
        memory: "1Gi"
        cpu: "1"
      requests:
        memory: "1Gi"
        cpu: "1"
    securityContext:
      privileged: false
      runAsUser: 1000
      runAsGroup: 1000
    tty: true
    volumeMounts:
      - name: binary-core-packages
        mountPath: /packages/binary
      - name: website-core-packages
        mountPath: /packages/web
  nodeSelector:
    kubernetes.io/os: "linux"
  restartPolicy: "Never"
  volumes:
    - name: binary-core-packages
      persistentVolumeClaim:
        claimName: binary-core-packages
    - name: website-core-packages
      persistentVolumeClaim:
        claimName: website-core-packages
