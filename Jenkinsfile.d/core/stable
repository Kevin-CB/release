pipeline {

  agent {
    kubernetes {
      label 'release-stable'
    }
  }

  options {
    disableConcurrentBuilds()
  }

  stages {
    stage("Release"){
      steps {
        build job: "core/release/${ BRANCH_NAME }"
      }
    }
    stage("Package"){
      steps {
        build job: "core/package/${ BRANCH_NAME }"
      }
    }
  }
}
